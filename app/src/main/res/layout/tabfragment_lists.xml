<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_recharge_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/rechargelist" />

    <TextView
        android:layout_toRightOf="@+id/iv_recharge_list_icon"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/tv_recharge_list_code"
        android:text="订单号：Fh12FS5F563"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/tv_recharge_list_timecode"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_recharge_list_code"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/iv_recharge_list_icon"
        android:text="订单时间：2020-6-1 11.00"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/tv_recharge_list_money"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/tv_recharge_list_code"
        android:text="+10"
        android:textColor="#BC1313"
        android:textSize="25dp" />

</RelativeLayout>