<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
              android:onClick="cancelMapClick"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/back"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="车位预定"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_time8"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_order"
                android:text="06.00-08.00" />

            <Button
                android:id="@+id/btn_time10"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/btn_order"
                android:text="08.00-10.00" />

            <Button
                android:id="@+id/btn_time12"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/btn_order"
                android:text="10.00-12.00" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_time14"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_order"
                android:text="12.00-14.00" />

            <Button
                android:id="@+id/btn_time16"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/btn_order"
                android:text="14.00-16.00" />

            <Button
                android:id="@+id/btn_time18"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/btn_order"
                android:text="16.00-18.00" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_time20"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_order"
                android:text="18.00-20.00" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="           (请选择连续的时间段，否则有可能预约失败！)"
            android:textColor="#5BABEA"
            android:textSize="14dp" />

        <com.bunny.android.library.LoadDataLayout
            android:id="@+id/book_ldl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            app:ldl_empty_tv="看啥看,什么也没有..."
            app:ldl_error_tv="oh no! 好像出错了..."
            app:ldl_loading_tv="不要急,等我加载完成..."/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/timeblank"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_yuding"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="56dp"
            android:background="@drawable/yuding"
            android:text="立即预定" />
    </LinearLayout>
</RelativeLayout>